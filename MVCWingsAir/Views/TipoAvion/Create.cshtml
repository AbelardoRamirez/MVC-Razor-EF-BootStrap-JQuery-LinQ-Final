@model MVCWingsAir.Models.TipoAvion

@{
	ViewBag.Title = "Crear Tipo de Avión";
}
<div class="row">
	<div class="col">
		<h2>Crear tipo de Avión</h2>
		@using( Html.BeginForm() ) {
			@Html.AntiForgeryToken()

			<div class="form-horizontal">
				<h4>Tipo de Avión</h4>
				<hr />
				@Html.ValidationSummary( true, "", new { @class = "text-danger" } )
				<div class="form-group">
					@Html.LabelFor( model => model.Nombre, htmlAttributes: new { @class = "control-label" } )
					@Html.EditorFor( model => model.Nombre, new { htmlAttributes = new { @class = "form-control" } } )
					@Html.ValidationMessageFor( model => model.Nombre, "", new { @class = "text-danger" } )
				</div>
				<div class="form-group">
					<input type="submit" value="Crear Tipo de Avión" class="btn btn-success btn-block" />
				</div>
			</div>
		}

		<div>
			@Html.ActionLink( "Ver Lista de Tipos de avión", "Index", null, new { @class = "btn btn-sm btn-outline-primary" } )
		</div>
	</div>
</div>
@section Scripts {
	@Scripts.Render( "~/bundles/jqueryval" )
}
